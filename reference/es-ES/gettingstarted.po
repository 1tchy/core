"         <td>\n"
"            Translation\n"
"         </td>\n"
"      </tr>\n"
"      <tr>\n"
"         <td>\n"
"            <h:inputTextarea id=\"text\" value=\"#{translator.text}\" "
"required=\"true\" rows=\"5\" cols=\"80\" />\n"
"         </td>\n"
"         <td>\n"
"            <h:outputText value=\"#{translator.translatedText}\" />\n"
"         </td>\n"
"      </tr>\n"
"   </table>\n"
"   <div>\n"
"      <h:commandButton id=\"button\" value=\"Translate\" action=\"#"
